@{
    foreach (var device in Model.allDevices)
    {
        <a class="nav-link" href="/api/devices/@device.category/@device.name">
        <div class="obj-container">

            <img class="img-thumbnail" src="@device.img" alt="@device.name" />

            <div class="text">
                <h1>@device.name</h1>
                <p>@device.shortDesc</p>
                <p>Цена: @device.price.ToString("c")</p>
            </div>

        </div>
        </a>
    }
}
